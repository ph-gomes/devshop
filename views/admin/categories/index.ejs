<%- include ../partials/header.ejs%>
<!-- ========================= SECTION PAGETOP ========================= -->
<section class="section-pagetop bg-primary">
  <div class="container clearfix">
    <h2 class="title-page">Admin</h2>

    <nav class="float-left">
      <ol class="breadcrumb text-white">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
      </ol>
    </nav>
  </div>
  <!-- container //  -->
</section>
<!-- ========================= SECTION INTRO END// ========================= -->

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg padding-y">
  <div class="container">
    <div class="row">
      <!-- col.// -->
      <main class="col">
        <a href="/admin/categories/new" class=" btn btn-primary"> Nova Categoria </a>
        <% categories.forEach( category => { %>
        <article class="card card-product">
          <div class="card-body">
            <div class="row">
              <!-- col.// -->
              <article class="col-sm-9">
                <h4 class="title"><%-category.category%></h4>
              </article>
              <aside class="col-sm-3 border-left">
                <p>
                  <a href="/admin/categories/edit/id" class="btn btn-primary"> Editar </a>
                  <a href="/admin/categories/delete/id" class=" btn btn-secondary"> Excluir </a>
                </p>
              </aside>
            </div>
          </div>
        </article>
        <% } ) %>
        <!-- card product .// -->
      </main>
      <!-- col.// -->
    </div>
  </div>
  <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
<%- include ../../partials/footer.ejs%>